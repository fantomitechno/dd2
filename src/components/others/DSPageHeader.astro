import UnderlinedHeading from "../UnderlinedHeading.astro";
---

<header
  class:list={{
    "has-subtitle": Astro.slots.has("subtitle") || Astro.slots.has("surname"),
  }}
>
  <UnderlinedHeading level={1} class="title">
    <slot />
  </UnderlinedHeading>{
    Astro.slots.has("surname") && (
      <div class="surname">
        <slot name="surname" />
      </div>
    )
  }
  {
    Astro.slots.has("subtitle") && (
      <div class="subtitle">
        <slot name="subtitle" />
      </div>
    )
  }
</header>

<style>
  header {
    margin-bottom: 1.5rem;
    padding-left: 6rem;
    position: relative;
    display: flex;
    min-height: 5.5em;
    flex-direction: column;
    justify-content: center;
  }

  .has-subtitle {
    margin-bottom: 1.75rem;
  }

  header::before {
    content: "";
    position: absolute;
    width: 5rem;
    height: 5rem;
    top: 4px;
    left: -0.5em;
    transform: rotate(15deg);
    background-image: url("../../assets/deep_slip.webp");
    background-size: 5rem auto;
    background-position: center;
    background-repeat: no-repeat;
    border: 0.2rem solid #e2931d;
  }

  .title {
    margin: 0;
    font-weight: 500;
    font-size: 2.4rem;
  }

  .subtitle {
    margin: 0;
    margin-top: -0.1rem;
    font-weight: 400;
    font-size: 1.6rem;
  }

  .surname {
    margin: 0;
    margin-top: -0.1rem;
    font-weight: 300;
    font-size: 1.4rem;
  }
</style>
